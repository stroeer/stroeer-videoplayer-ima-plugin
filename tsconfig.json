{
  "forceConsitentCasingInFileNames": true,
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*.ts", "custom.d.ts", "node_modules/@alugha/ima/lib/typings/ima.d.ts"],
  "exclude": ["node_modules"]
}
